#!/bin/bash

# Git pre-push hook –¥–ª—è –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–≥–æ –¥–µ–ø–ª–æ—è
# –ó–∞–ø—É—Å–∫–∞–µ—Ç—Å—è –ø–µ—Ä–µ–¥ –∫–∞–∂–¥—ã–º git push

echo "üöÄ Triggering auto-deploy on server..."

# –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è (–∏–∑–º–µ–Ω–∏—Ç–µ –Ω–∞ —Å–≤–æ–∏ –∑–Ω–∞—á–µ–Ω–∏—è)
SERVER_USER="root"
SERVER_HOST="your-server-ip"
SERVER_PATH="/root/kupi_slona"

# SSH –∫–æ–º–∞–Ω–¥–∞ –¥–ª—è –¥–µ–ø–ª–æ—è
ssh $SERVER_USER@$SERVER_HOST "cd $SERVER_PATH && ./auto-deploy.sh"

if [ $? -eq 0 ]; then
    echo "‚úÖ Auto-deploy completed successfully!"
else
    echo "‚ùå Auto-deploy failed!"
    exit 1
fi
