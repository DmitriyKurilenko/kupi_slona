# Production Environment Variables
# Скопируйте в .env и заполните своими значениями

# NGINX and SSL Settings (ОБЯЗАТЕЛЬНО для production!)
DOMAIN=your-domain.com
SSL_EMAIL=admin@your-domain.com

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production

# Domain Settings
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Database Settings
DB_HOST=db
DB_NAME=elephant_shop
DB_USER=postgres
DB_PASSWORD=your-strong-password-here
DB_PORT=5432

# Redis/Celery Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
REDIS_URL=redis://redis:6379/1

# OAuth Settings (замените на свои)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

APPLE_CLIENT_ID=com.yourcompany.kupi-slona
APPLE_CLIENT_SECRET=your-apple-service-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nMIGTAgEA...\n-----END PRIVATE KEY-----
